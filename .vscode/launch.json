{
    "version": "0.2.0",
    
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "(lldb) Launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "preLaunchTask": "Viv C Build",
            "cwd": "${workspaceFolder}",
            "terminal": "integrated",
            "console": "integratedTerminal"
        }

    ]
}

